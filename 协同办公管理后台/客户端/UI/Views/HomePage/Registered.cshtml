<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Layui</title>
    <meta name="renderer" content="webkit">
    <script src="~/js/Filter.js"></script>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">` `
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <!-- 注意：如果你直接复制所有代码到本地，上述css路径需要改成你本地的 -->
</head>
<body style="background-image:url(/Img/52ppt.jpg); background-repeat:no-repeat ;background-size:100% 100%; background-attachment: fixed;">
    <div class="layui-tab" style="opacity: 0.7 ;width:18%;height:30%;margin-left:40%;margin-top:12%;z-index:9999;background-image:url(/Img/git.gif); background-repeat:no-repeat ;background-size:100% 100%; background-attachment: fixed;">
        <form class="layui-form" action="">
            <div class="layui-form-item">
                <label class="layui-form-label" style="margin-top:50px"><i class="layui-icon">&#xe66f;</i>：</label>
                <div class="layui-input-inline">
                    <input type="text" name="title" style="margin-top:50px" required lay-verify="required" placeholder="请输入用户名" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><i class="layui-icon">&#xe678;</i>：</label>
                <div class="layui-input-inline">
                    <input type="text" name="title" required lay-verify="phone" placeholder="请输入手机号" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><i class="layui-icon">&#xe673;</i>：</label>
                <div class="layui-input-inline">
                    <input id="password1" type="password" name="password" required lay-verify="required" placeholder="请输入密码" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label"><i class="layui-icon">&#xe673;</i>：</label>
                <div class="layui-input-inline">
                    <input onblur="pwd2()" id="password2" type="password" name="password" required lay-verify="required" placeholder="确认密码" autocomplete="off" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="margin-top:37px">
                <a href="/HomePage/Login" style="margin-left:110px">已有账号？去往登录</a>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block">
                    <button class="layui-btn" lay-submit lay-filter="formDemo" style="width:125px;margin-bottom:3px">注册</button>
                </div>
            </div>
        </form>
    </div>

    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/layui/layui.js"></script>
    <script src="~/js/jquery.unobtrusive-ajax.js"></script>
    <!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 -->
    <script>
        layui.use('form', function () {
            var form = layui.form;

            //监听提交
            form.on('submit(formDemo)', function (data) {
                layer.msg(JSON.stringify(data.field));
                return false;
            });
        });
        function pwd2() {
            var str1 = $("#password1").val();
            var str2 = $("#password2").val();
            if (str1 != str2) {
                layer.alert('两次密码不一致');
            }
        }
    </script>
</body>
</html>